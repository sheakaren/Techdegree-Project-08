extends layout.pug

block content
  center
    h1 Welcome to Karen's Fictional Fiction and Non-Fiction Library
    p
      a.button(href='/books/new') Create New Book
    table
      thead
      tr
        th Title
        th Author
        th Genre
        th Year
      tbody
        each book in books
          tr
            td
              a(href=`/books/${book.id}`)= book.title
            td= book.author
            td= book.genre
            td= book.year
          tr
          